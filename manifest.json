{
  "manifest_version": 3,
  "name": "Cache Wipe",
  "version": "1.0",
  "description": "Instantly clear cache for the active tab with one click",
  "permissions": [
    "activeTab",
    "browsingData",
    "tabs",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to wipe cache for this tab"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}